<% act = @act || @act %>
<% context ||= act %>
<% collection ||= :operands %>
<% hide_actions ||= false %>
<% hide_back ||= false %>

<% with_attribute_settings object: operand do %>
  <tr data-id="<%= operand.id %>">
    <%= render "shared/tables/checkbox", object: operand %>
    <td><%= render 'shared/attributes/text', attribute: :name, url: [:account, operand] %></td>
    <td><%= render 'shared/attributes/belongs_to', attribute: :noun %></td>
    <%# ðŸš… super scaffolding will insert new fields above this line. %>
    <td><%= render 'shared/attributes/date_and_time', attribute: :created_at %></td>
    <td class="buttons">
      <% unless hide_actions %>
        <% if can? :edit, operand %>
          <%= link_to t('.buttons.shorthand.edit'), [:edit, :account, operand], class: 'button-secondary button-smaller' %>
        <% end %>
        <% if can? :destroy, operand %>
          <%= button_to t('.buttons.shorthand.destroy'), [:account, operand], method: :delete, data: { confirm: t('.buttons.confirmations.destroy', model_locales(operand)) }, class: 'button-secondary button-smaller' %>
        <% end %>
        <%# ðŸš… super scaffolding will insert new action model buttons above this line. %>
      <% end %>
    </td>
  </tr>
<% end %>
